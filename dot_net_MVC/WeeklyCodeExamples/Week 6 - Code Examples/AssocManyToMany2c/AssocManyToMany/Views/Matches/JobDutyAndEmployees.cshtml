@model AssocManyToMany.Controllers.JobDutyEditEmployeesFormViewModel

@{
    ViewBag.Title = "JobDutyAndEmployees";
}

<h2>Employees for job duty @Model.Name</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Select the employees, and click the Save button</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        @*<div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>*@

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">

                <table class="table">
                    <tr><th></th><th>Employee Name</th></tr>
                    @foreach (var item in Model.EmployeeList)
                {
                        <tr>
                            <td><input type="checkbox" name="EmployeeIds" value="@item.Value" checked="@item.Selected" /></td>
                            <td>@item.Text</td>
                        </tr>
                    }
                </table>

            </div>
        </div>

    </div>
}

<div>
    @Html.ActionLink("Back to List", "ByJobDuty")
</div>
