@model IEnumerable<NotesApp.Models.NoteBaseViewModel>

@{ ViewBag.Title = "List of notes";
    var userAccount = new NotesApp.Controllers.RequestUser(User as System.Security.Claims.ClaimsPrincipal); }

<h2>List of notes (for user @userAccount.NamesFirstLast)</h2>

<p>
    @Html.ActionLink("Create new note", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        @*<th>
                @Html.DisplayNameFor(model => model.Owner)
            </th>*@
        <th>
            @Html.DisplayNameFor(model => model.DateCreated)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfLastEdit)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        <div class="panel panel-default panel-body">
            @Html.Raw(item.Content)
            @*@item.Content*@
        </div>
        @*@Html.DisplayFor(modelItem => item.Content)*@
    </td>
    @*<td>
            @Html.DisplayFor(modelItem => item.Owner)
        </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.DateCreated)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateOfLastEdit)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
